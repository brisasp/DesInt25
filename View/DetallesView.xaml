<UserControl x:Class="LoginRegister.View.DetallesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginRegister.View" 
             xmlns:viewmodel="clr-namespace:LoginRegister.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:DetallesViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
              Background ="Black">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="10,10,10,10">
            <TextBlock Grid.Column="0" Foreground="White" Grid.Row="1" Text="{Binding Gato.Id, StringFormat='Id: {0}'}"/>
            <TextBlock Grid.Column="0" Foreground="White" Grid.Row="1" Text="{Binding Gato.Name, StringFormat='Name: {0}'}"/>
            <TextBlock Grid.Column="0" Foreground="White" Grid.Row="1" Text="{Binding Gato.Pais, StringFormat='Pais: {0}'}"/>
            <TextBlock Grid.Column="0" Foreground="White" Grid.Row="1" Text="{Binding Gato.Description, StringFormat='Descripcion: {0}'}"/>
            <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Margin="10,0,10,10">
                <Button Grid.Column="0" Grid.Row="1" Content="Save Data" Command="{Binding SaveCommand}" Margin="10,0,30,0"  />
                <Button Grid.Column="0" Grid.Row="1" Content="Close" Command="{Binding DataContext.CloseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.RowSpan="2" Margin="10,0,0,0" Grid.Column="1">
            <Image Grid.Column="0" Grid.Row="0" Stretch="Uniform" Source="{Binding Gato.Image}"/>
        </StackPanel>

    </Grid>
</UserControl>
